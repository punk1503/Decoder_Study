<Window ResizeMode="CanMinimize" x:Class="Decoder_Study.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Decoder_Study"
        mc:Ignorable="d"
        Title="Decoder Study" Height="450" Width="806">
    <Grid Margin="0,0,4,0" RenderTransformOrigin="0.467,0.496">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="220"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="Input_TextBox" Grid.Column="0" FontSize="20"  Margin ="20" BorderThickness="2.5">Ввод</TextBox>
        <TextBox x:Name="Output_TextBox" Grid.Row="1" Grid.Column="0" FontSize="20" Margin ="20" BorderThickness="2.5">Вывод</TextBox>
        <Button Grid.Row="0" Grid.Column="1" Margin="20" Click="Encode_Click">Зашифровать</Button>
        <Button Grid.Row="1" Grid.Column="1" Margin="20" Click="Decode_Click">Дешифровтаь</Button>

        <StackPanel VerticalAlignment="Top" Grid.Row="2" Grid.Column="1" Orientation="Vertical">
            <Label HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1" FontSize="15">Выберите алгоритм</Label>
            <ComboBox SelectionChanged="Cipher_SelectionChanged" Grid.Row="2" Grid.Column="1" Margin="10" Height="25" VerticalAlignment="Top">
                <ComboBoxItem>0: Начало</ComboBoxItem>
                <ComboBoxItem>1: Шифр Цезаря</ComboBoxItem>
            </ComboBox>
            <Label x:Name="parameter_Label" Margin="5" FontSize="15" Visibility="Hidden" IsEnabled="False">Параметр</Label>
            <TextBox x:Name="parameter_TextBox" Margin="5" Height="25" Visibility="Hidden" IsEnabled="False"></TextBox>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" Grid.Row="2" Grid.Column="1" Orientation="Vertical">
            <Button Margin="20" Padding="10">Настройки</Button>
        </StackPanel>
    </Grid>
</Window>